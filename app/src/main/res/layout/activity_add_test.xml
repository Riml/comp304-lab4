<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp304.group1.lab4.AddTest"
    android:weightSum="1">


    <TextView
        android:text="Pick Patient to add test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnPatient" />

    <TextView
        android:text="Current patient survived after:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txtTotalTests"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Add new test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtTotalTests"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTotalTests"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp">

        <TextView
            android:text="BPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="111"
            android:ems="10"
            android:id="@+id/inputBPL"
            android:textColor="?attr/colorControlNormal" />

        <TextView
            android:text="BPH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/inputBPH"
            android:textColor="?attr/colorControlNormal" />

        <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <EditText
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/inputTemp"
            android:textColor="?attr/colorControlNormal" />

    </LinearLayout>

    <Button
        android:text="Add new test"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/btnNewTest"
        android:layout_weight="0.01"
        android:onClick="onClickAddTest" />

    <TextView
        android:text="Previous Tests:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:text="No tests yet performed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTestData" />

</LinearLayout>
